#particles-js
.top-wrapper
  .main-title.top-effect
    = t("dict.sub-title")
  .main-sub-title.second-effect
    = t("dict.content")

  .third-effect
    - if logged_in?
      = link_to "早速始める", "#start", class:"btn btn-outline-primary button-form my-3"
    
    - else
      .button
        = link_to auth_at_provider_path(provider: :github) , class: "btn btn-outline-success button-form my-4" do
              i.fab.fa-github.me-2
              = "Sign in with Github"
            
      .button
        = link_to "すぐに始める", "#start", class:"btn btn-outline-primary button-form mb-3"
        
    .top-sub-title.forth-effect
      = "※ログインすると結果が記録、チャート、偏差値に反映されます"
.flex
  .swiper.mb-3
    .swiper-wrapper
      = render @categories
    .swiper-pagination.swiper-pagination-black
    .swiper-button-prev.swiper-custom-button
      i.fa.fa-angle-left  
    .swiper-button-next.swiper-custom-button
      i.fa.fa-angle-right

  .chart-space.mt-3
    canvas#myChart
  #start
  
.space
  .title
    = t("dict.select_category")
    = render "tab_menu"
    = render "tab_content"
  = link_to "ページトップに戻る", "#top", class:"btn btn-outline-primary btn-sm my-3 ms-1"
  
  script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js" 
  
